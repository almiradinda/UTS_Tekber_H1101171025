<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F2DD"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="307dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/komponen_android"
        android:textAlignment="center"
        android:textColor="#E7BB2C"
        android:textSize="30sp" />

    <Button
        android:id="@+id/activity"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="185dp"
        android:background="#E7BB2C"
        android:onClick="activity"
        android:text="@string/activity"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/service"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="278dp"
        android:background="#E7BB2C"
        android:onClick="service"
        android:text="@string/service"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/content"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="378dp"
        android:background="#E7BB2C"
        android:onClick="content"
        android:text="@string/content_provider"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/broadcast"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="470dp"
        android:background="#E7BB2C"
        android:onClick="broadcast"
        android:text="@string/broadcast_receiver"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/intent"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="568dp"
        android:background="#E7BB2C"
        android:onClick="intent"
        android:text="@string/intent"
        android:textColor="#ffffff" />

</RelativeLayout>